<!-- item_pizza.xml -->
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp">

    <!-- LinearLayout for vertical alignment -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <!-- Image view for pizza -->
        <ImageView
            android:id="@+id/imagePizza"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_android_black_24dp" />

        <!-- Text views for pizza details -->
        <TextView
            android:id="@+id/textPizzaName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="Pizza Name" />

        <TextView
            android:id="@+id/textPizzaDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="Pizza Description" />

        <TextView
            android:id="@+id/textPizzaPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="Pizza Price" />

        <!-- EditText for quantity -->
        <EditText
            android:id="@+id/editTextQuantity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Quantity"
            android:inputType="number" />

        <!-- Button to add to cart -->
        <Button
            android:id="@+id/btnAddToCart"
            android:onClick="addToCart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="8dp"
            android:text="Add to Cart" />
    </LinearLayout>

</androidx.cardview.widget.CardView>
